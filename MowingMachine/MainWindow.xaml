<Window x:Class="MowingMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <Frame Name="SampleMapFrame">
            </Frame>

            <Grid Grid.Column="1">
                <StackPanel Height="100" Margin="10,10,10,0" VerticalAlignment="Top">
                    <Label Content="MowingMachine stats" HorizontalAlignment="Center" />

                    <DockPanel Margin="0,10,0,0">
                        <Label Content="Battery Capacity kWh: "/>
                        <TextBox Text="1.2" Height="20" />
                    </DockPanel>

                    <DockPanel Margin="0,10,0,0">
                        <Label Content="Battery Capacity kWh: "/>
                        <TextBox Text="1.2" Height="20" />
                    </DockPanel>
                </StackPanel>

                <StackPanel Margin="10" VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <ProgressBar Grid.Column="1" Orientation="Vertical" Value="40" Height="200" />
                            </Grid>
                            
                            <Label HorizontalAlignment="Center" Content="Charge: 40%"/>
                        </StackPanel>


                        <StackPanel Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <ProgressBar Grid.Column="1" Orientation="Vertical" Value="65" Height="200" />
                            </Grid>

                            <Label HorizontalAlignment="Center" Content="Mowed lawn: 65%"/>
                        </StackPanel>
                    </Grid>

                    <Button Name="StartButton" Height="30" Content="Start Simulation" />
                </StackPanel>
            </Grid>

